<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="typingrobot.controllers.FXML_Home_Controller">
    <children>
        <MenuBar>
            <menus>
                <Menu mnemonicParsing="false" text="File">
                    <items>
                        <MenuItem fx:id="menuItemClose" mnemonicParsing="false" onAction="#onMenuItemClose" text="Close" />
                    </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Edit">
                    <items>
                        <MenuItem fx:id="menuItemPreferences" mnemonicParsing="false" onAction="#onMenuItemPreferences" text="Preferences" />
                    </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Help">
                    <items>
                        <MenuItem fx:id="menuItemAbout" mnemonicParsing="false" onAction="#onMenuItemAbout" text="About" />
                    </items>
                </Menu>
            </menus>
        </MenuBar>
        <HBox prefHeight="500.0" prefWidth="600.0" VBox.vgrow="ALWAYS">
            <children>
                <VBox fillWidth="false" prefWidth="200.0" stylesheets="@../resources/smm_stylesheet.css" HBox.hgrow="NEVER">
                    <children>
                        <AnchorPane>
                            <children>
                                <Label fx:id="dropField" alignment="CENTER" contentDisplay="CENTER" onContextMenuRequested="#onDropFieldContextMenuRequest" onDragDropped="#onDragDroped" onDragOver="#onDragOver" prefHeight="100.0" prefWidth="200.0" stylesheets="@../resources/smm_stylesheet.css" text="Drop excel file here. Suported extensions: xls, xlsx, csv" textAlignment="CENTER" textFill="WHITE" wrapText="true">
                                    <styleClass>
                                        <String fx:value="marginMedium" />
                                        <String fx:value="interactiveBckground" />
                                    </styleClass>
                                    <font>
                                        <Font size="14.0" />
                                    </font>
                                </Label>
                                <Label fx:id="countDownLabel" alignment="CENTER" contentDisplay="CENTER" prefHeight="105.0" prefWidth="200.0" stylesheets="@../resources/smm_stylesheet.css" text="5" textAlignment="CENTER" textFill="#00ff26" visible="false" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                                    <font>
                                        <Font size="72.0" />
                                    </font>
                                </Label>
                            </children>
                        </AnchorPane>
                        <HBox alignment="CENTER" prefWidth="200.0" stylesheets="@../resources/smm_stylesheet.css">
                            <children>
                                <Label prefWidth="100.0" text="Delay (ms)" HBox.hgrow="ALWAYS" />
                                <TextField fx:id="delayTextField" alignment="CENTER" prefWidth="100.0" text="30" />
                            </children>
                            <styleClass>
                                <String fx:value="marginMedium" />
                                <String fx:value="paddingMedium" />
                            </styleClass>
                        </HBox>
                        <HBox alignment="CENTER_LEFT" prefWidth="200.0" stylesheets="@../resources/smm_stylesheet.css">
                            <children>
                                <Label prefWidth="100.0" text="Start at position" />
                                <Label fx:id="startingPositionLabel" alignment="CENTER" onMouseClicked="#onStartPositionClick" prefWidth="100.0" stylesheets="@../resources/smm_stylesheet.css" text="1">
                                    <tooltip>
                                        <Tooltip fx:id="tooltip" text="Click on table to change" />
                                    </tooltip>
                                </Label>
                            </children>
                            <styleClass>
                                <String fx:value="marginMedium" />
                                <String fx:value="paddingMedium" />
                            </styleClass>
                        </HBox>
                        <VBox alignment="BOTTOM_CENTER" prefWidth="200.0" VBox.vgrow="NEVER">
                            <children>
                        <VBox prefWidth="200.0" VBox.vgrow="NEVER">
                           <children>
                              <CheckBox fx:id="hasHeaders" alignment="TOP_CENTER" mnemonicParsing="false" onAction="#onHasHeaderChange" selected="true" text="My table has header">
                                 <opaqueInsets>
                                    <Insets />
                                 </opaqueInsets>
                                 <padding>
                                    <Insets bottom="4.0" left="4.0" right="4.0" top="4.0" />
                                 </padding>
                              </CheckBox>
                           </children>
                           <opaqueInsets>
                              <Insets />
                           </opaqueInsets>
                        </VBox>
                        <Label fx:id="errorLabel" text="Error!" textFill="#ff0101" wrapText="true" VBox.vgrow="NEVER">
                           <padding>
                              <Insets bottom="4.0" left="4.0" right="4.0" top="4.0" />
                           </padding>
                        </Label>
                                <Button fx:id="startButton" mnemonicParsing="false" onAction="#startTyping" styleClass="positiveTextColor" stylesheets="@../resources/smm_stylesheet.css" text="Start typing">
                                    <VBox.margin>
                                        <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
                                    </VBox.margin>
                                </Button>
                                <Button fx:id="stopButton" mnemonicParsing="false" onAction="#stopTyping" styleClass="negativeTextColor" stylesheets="@../resources/smm_stylesheet.css" text="Stop typing">
                                    <VBox.margin>
                                        <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
                                    </VBox.margin>
                                </Button>
                            </children>
                        </VBox>
                    </children>
                    <styleClass>
                        <String fx:value="marginMedium" />
                        <String fx:value="paddingMedium" />
                    </styleClass>
                </VBox>
                <VBox alignment="CENTER" HBox.hgrow="ALWAYS">
                    <children>
            
                        <TableView fx:id="tableView" editable="true" minHeight="-Infinity" onMouseClicked="#onTableMouseClicked" VBox.vgrow="ALWAYS">
                            <columns>
                                <TableColumn fx:id="id" editable="true" prefWidth="75.0" text="R.br.">
                                    <cellValueFactory>
                                        <PropertyValueFactory property="id" />
                                    </cellValueFactory>
                                </TableColumn>
                                
                                <TableColumn fx:id="paymentCode" editable="true" prefWidth="75.0" text="Osnov">
                                    <cellValueFactory>
                                        <PropertyValueFactory property="paymentCode" />
                                    </cellValueFactory>
                                </TableColumn>
                            
                                <TableColumn fx:id="invoiceNumber" editable="true" prefWidth="75.0" text="Faktura">
                                    <cellValueFactory>
                                        <PropertyValueFactory property="invoiceNumber" />
                                    </cellValueFactory>
                                </TableColumn>
                          
                                                                          
                                <TableColumn fx:id="invoiceYear" editable="true" prefWidth="75.0" text="Godina">
                                    <cellValueFactory>
                                        <PropertyValueFactory property="invoiceYear" />
                                    </cellValueFactory>
                                </TableColumn>
                            
                                                                            
                                <TableColumn fx:id="invoiceAmount" editable="true" prefWidth="75.0" text="Iznos">
                                    <cellValueFactory>
                                        <PropertyValueFactory property="invoiceAmount" />
                                    </cellValueFactory>
                                </TableColumn>
                            
                                                                            
                            </columns>
                            <columnResizePolicy>
                                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                            </columnResizePolicy>
                        </TableView>
                    </children>
                </VBox>
            </children>
        </HBox>
    </children>
</VBox>
